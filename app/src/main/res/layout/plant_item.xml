<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:id="@+id/card_view">

   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:orientation="vertical"
           app:cardCornerRadius="10dp">

           <ImageView

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"
               android:id="@+id/plant_example_pic"/>
       </android.support.v7.widget.CardView>

       <android.support.v7.widget.CardView
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:layout_marginTop="10dp"
           app:cardCornerRadius="10dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center"
               android:background="@drawable/flowers">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_name"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_latin_name"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_alias_name"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_family"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_genus"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/plant_score"
                   android:textSize="20dp"
                   android:layout_gravity="center"/>
           </LinearLayout>

       </android.support.v7.widget.CardView>


   </LinearLayout>

</android.support.v7.widget.CardView>