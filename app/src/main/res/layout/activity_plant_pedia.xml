<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cwt.coolpot.infopart.plant.PlantPediaActivity">

    <ScrollView
        android:id="@+id/plant_pedia_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/name_part" />

            <include layout="@layout/images_part" />

            <include layout="@layout/mcll_part" />

            <include layout="@layout/description_part" />

            <include layout="@layout/fbdq_part" />

            <include layout="@layout/bxtz_part" />

            <include layout="@layout/hksj_part" />

            <include layout="@layout/yhjs_part" />

            <include layout="@layout/jzgy_part" />

            <include layout="@layout/xgsc_part" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>
