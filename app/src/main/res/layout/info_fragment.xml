<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:fitsSystemWindows="true"
        android:id="@+id/bg_bing_pic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TestPedia"
            android:visibility="gone"
            android:id="@+id/testPediaUI_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TestRec"
            android:visibility="gone"
            android:id="@+id/testRecUI_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:orientation="horizontal">

            <SearchView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="输入植物名称"
                android:id="@+id/search_view"/>


        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        app:backgroundTint="#87c5ff"
        app:rippleColor="#33728dff"
        app:elevation="10dp"
        app:pressedTranslationZ="12dp"
        android:id="@+id/search_pic"/>

    <RelativeLayout
        android:layout_width="279dp"
        android:layout_height="172dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@mipmap/title">

    </RelativeLayout>

</FrameLayout>