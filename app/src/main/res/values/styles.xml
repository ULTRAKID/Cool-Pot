<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CoolPotTheme" parent="AppTheme">
    </style>
    
    <style name="CoolPotDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowBackground">@drawable/dialog</item>
    </style>

    <style name="NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Splash" parent="android:Theme">
        <item name="android:windowBackground">@drawable/flowerpot</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
